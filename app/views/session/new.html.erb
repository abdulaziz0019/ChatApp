<h4 class="ui header"></h4>
<h1>Welcome, login to start your argument. Good luck</h1>
<div class="ui one column grid">
  <div class="center aligned column">
  <i class = " massive fire extinguisher icon"></i>
</div>
</div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role:'form'}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label "username" %>
          <div class="ui left icon input">
            <%= f.text_field :username%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label "password" %>
          <div class="ui left icon input">
            <%= f.password_field  :password , placeholder: 'enter  password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit :login , class: "ui red submit button" %>

      </div>
    </div>
    <div class="right aligned column">
      <div class="ui big blue button">
        <i class="white  signup icon"></i>
        Sign Up
      </div>
    </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
<%end%>
